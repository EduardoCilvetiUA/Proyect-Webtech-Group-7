<% if current_user.role == 'admin' %>
  <div id="<%= dom_id report %>">
    <p>
      <strong>Report:</strong>
      <%= report.report_id %>
    </p>

    <p>
      <strong>Supervisor:</strong>
      <%= report.supervisor_id %>
    </p>

    <p>
      <strong>Report type:</strong>
      <%= report.report_type %>
    </p>

    <p>
      <strong>Date:</strong>
      <%= report.date %>
    </p>

    <p>
      <strong>Data:</strong>
      <%= report.data %>
    </p>

  </div>
<% else %>
  <p style="color: red">You cannot access this data as a normal user.</p>
<% end %>

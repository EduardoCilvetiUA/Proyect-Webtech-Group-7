<div id="<%= dom_id ticket %>">

  <% if current_user.role == 'normal' %>

    <strong>User:</strong>
      <%= ticket.user.name %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= ticket.description %>
    </p>

    <p>
      <strong>Due date:</strong>
      <%= ticket.due_date %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= ticket.status %>
    </p>

    <% if ticket.status == 'Closed' %>
      <p>
        <strong>Star rating:</strong>
        <%= ticket.star_rating %>
      </p>
    <% end %>

  <% else %>

    <p>
      <strong>User:</strong>
      <%= ticket.user.name %>
    </p>

    <p>
      <strong>Executive:</strong>
      <% user = User.find_by(execrandoms: ticket.execrandoms) %>
      <% if user.present? %>
        <%= user.name %>
      <% end %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= ticket.description %>
    </p>

    <p>
      <strong>Priority:</strong>
      <%= ticket.priority %>
    </p>

    <p>
      <strong>Due date:</strong>
      <%= ticket.due_date %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= ticket.status %>
    </p>


    <% if ticket.status == 'Closed' %>
      <p>
        <strong>Star rating:</strong>
        <%= ticket.star_rating %>
      </p>
    <% end %>

    <p>
    <%end  %>
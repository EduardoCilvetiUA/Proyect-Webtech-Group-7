<% if current_user.role == 'admin' || current_user.role == 'super' %>
<p style="color: green"><%= notice %></p>

<h1>Users</h1>

  <table class="table-bordered">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th></th>
    </tr>
    <tbody>
      <% @users.each do |users| %>
    <tr>
    <% if users.role != 'admin' %>
      <td><%= users.id %></td>
      <td><%= users.name %></td>
      <td><%= users.email %></td>
      <td>
      <% if users.role == 'normal' %>
        Normal
      <% elsif users.role == 'super' %>
        Supervisor
      <% elsif users.role == 'exec' %>
        Executive
      <% else %>
        <%= users.role %>
      <% end %>
      </td>
  <td><%= link_to "Show user info", users, class: 'btn btn-outline-warning' %>
    <% end %>
      </tr>
    <% end %>
    <tbody>
  </table>
<% else %>
  <p style="color: red">You cannot access this data as a normal user.</p>
<% end %>

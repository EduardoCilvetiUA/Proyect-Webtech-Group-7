<% if current_user.role == 'admin' %>
<h1>Editing user</h1>

<%= render "form", user: @user %>

<br>

<div>
  <%= link_to "Show this user", @user, class: 'btn btn-outline-warning' %> |
  <%= link_to "Back to users", users_path, class: 'btn btn-outline-warning' %>
</div>
<% else %>
  <p style="color: red">You cannot access this data as a normal user.</p>
<% end %>

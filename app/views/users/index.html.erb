<% if current_user.role == 'admin' || current_user.role == 'super' %>
<p style="color: green"><%= notice %></p>

<h1>Users</h1>

  <table class="table-bordered">
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>ID</th>
      <th>Google Account</th>
      <th>Role</th>
      <th></th>
    </tr>
    <tbody>
      <% @users.each do |users| %>
    <tr>
    <% if users.role != 'admin' %>
      <td><%= users.name %></td>
      <td><%= users.email %></td>
      <td><%= users.id %></td>
      <td><%= users.google_account_id %></td>
      <td><%= users.role %></td>
      <td><%= link_to "Show user info", users, class: 'btn btn-outline-warning' %>
    <% end %>
      </tr>
    <% end %>
    <tbody>
  </table>
<%= link_to "New users", new_user_path, class: 'btn btn-outline-warning' %>
<% else %>
  <p style="color: red">You cannot access this data as a normal user.</p>
<% end %>
